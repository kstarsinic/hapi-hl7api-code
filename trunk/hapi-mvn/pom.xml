	<distributionManagement>
		<repository>
			<id>hapi</id>
			<name>HAPI Sourceforge</name>
			<url>scp://web.sourceforge.net/home/groups/h/hl/hl7api/htdocs/m2</url>
		</repository>
		<snapshotRepository>
			<id>hapi</id>
